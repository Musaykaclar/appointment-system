@using MudBlazor

<MudDialog>
    <DialogContent>
        <MudText>@Message</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@CancelText</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">@ConfirmText</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] 
    public IDialogReference? Dialog { get; set; }

    [Parameter] public string Message { get; set; } = string.Empty;
    [Parameter] public string ConfirmText { get; set; } = "Onayla";
    [Parameter] public string CancelText { get; set; } = "Ä°ptal";

    void Submit() 
    {
        Dialog?.Close(DialogResult.Ok(true));
    }
    
    void Cancel() 
    {
        Dialog?.Close(DialogResult.Cancel());
    }
}